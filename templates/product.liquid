<div class="product-page">
  <div class="product-image">
    <img src="{{ product.featured_image | img_url: width: 800 }}" alt="Placeholder for product"> 
  </div>

  <div class="product-details">
    <h1>{{ product.title }}</h1>
    <p class="product-price">{{ product.price | money }}</p>
    <form method="post" action="/cart/add">
      <input type="hidden" name="id" value="1234567890">
      <button type="submit" class="add-to-card-btn">Add to Cart</button>
    </form>
    <p class="product-description">{{ product.description }}</p>
  </div>
</div>

<style>
  .product-page {
    display: flex;
    gap: 40px;
    max-width: 900px;
    margin: 40px auto;
    align-items: flex-start;
  }

  .product-image img {
    width: 400px;
    height: 400px;
    object-fit: cover;
    border-radius: 8px;
    background-color: #f0f0f0;
  }

  .product-details {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
  }

  .product-title {
    font-size: 2rem;
    margin-bottom: 16px;
  }

  .product-price {
    font-size: 1.5rem;
    color: #333;
    margin-bottom: 24px;
  }

  .add-to-card-btn {
    background-color: #007bff;
    color: white;
    border: none;
    padding: 12px 24px;
    font-size: 1rem;
    cursor: pointer;
    border-radius: 4px;
    margin-bottom: 24px;
  }

  .add-to-card-btn:hover {
    background-color: #0056b3;
  }

  .product-description {
    color: #555;
    font-size: 1rem;
  }

  @media (max-width: 768px) {
  
    .product-page {
      flex-direction: column;
      align-items: center;
    }

    .product-image img {
      width: 100%;
      height: auto;
    }

    .product-details {
      width: 100%;
      text-align: center;
    }
  }
